{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        .post-card {
            background-color: #f7f7f7;
            padding: 20px;
            border-radius: 5px;
        }
        .post-header {
            background-color: #e9ecef;
            padding: 10px 20px;
            border-radius: 5px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="post-header row">
                    <div class="col-md-2">Pseudo</div>
                    <div class="col-md-6">Titre</div>
                    <div class="col-md-2">Date</div>
                </div>
                {% for post in posts %}
                    <div class="post-card row">
                        <div class="col-md-2">{{ post.pseudo }}</div>
                        <div class="col-md-6">
                        <a href="{{ path('app_show_post', {'id': post.id}) }}">{{ post.title }}</a>
                        </div>
                        <div class="col-md-2">{{ post.sentAt|date('d/m/Y') }}</div>
                        <div class="col-md-2 text-right">
                            <a href="{{ path('delete_post', {'id':post.id}) }}" class="btn btn-danger">
                             <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                {% endfor %}
                <div class="text-center mt-4">
                    <a href="{{ path('new_post') }}" class="btn btn-primary">Cr√©er un post</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
